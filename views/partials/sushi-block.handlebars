<li class="list-group-item">
    {{this.sushi_name}}
    <button class="shift btn btn-sm {{#if
            mindfully_eaten}}btn-outline-warning{{else}}btn-outline-info{{/if}}"
            data-id="{{this.id}}" data-newme="{{mindfully_eaten}}">
        {{#if mindfully_eaten}}Enjoy{{else}}Reorder{{/if}}
    </button>
    <button type="button" class="delete-sushi btn btn-outline-danger btn-sm" data-id="{{this.id}}"><i class="fas fa-times"></i></button>
</li>