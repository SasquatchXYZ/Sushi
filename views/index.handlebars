<div class="uk-flex uk-flex-center">
        <div class="uk-card uk-card-default uk-card-body uk-width-1-3">
            <ul class="uk-list uk-list-divider">
                {{#each sushi}}
                    {{#unless mindfully_eaten}}
                        {{> sushi-block mindfully_eaten=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="uk-card uk-card-default uk-card-body uk-width-1-3 uk-margin-left">
            <h3 class="uk-card-title">Add Sushi</h3>

            <form id="add-sushi" class="uk-form-horizontal uk-margin-small">
                <div class="uk-margin">
                    <label class="uk-form-label" for="add-sushi-name">Sushi Name:</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="add-sushi-name" type="text" placeholder="">
                    </div>
                </div>

                <!--<div class="form-group">
                    <label for="add-sushi-name">Sushi Name:</label>
                    <input type="text" id="add-sushi-name" name="name">
                </div>-->

                <div class="uk-margin">
                    <div class="uk-form-label">Have you eaten this yet?</div>
                    <div class="uk-form-controls uk-form-controls-text">
                        <label><input class="uk-radio" type="radio" name="m-e" value="0" checked>Not Yet</label><br>
                        <label><input class="uk-radio" type="radio" name="m-e" value="1">Yes</label>
                    </div>
                </div>

                <!--<div class="form-group">
                    <label for="me">Have you eaten this yet?</label>
                    <input type="radio" name="me" value="0" checked>Not Yet<br>
                    <input type="radio" name="me" value="1">Yes
                </div>-->

                <button type="submit" class="uk-button uk-button-danger">Add Sushi</button>
            </form>
        </div>
        <div class="uk-card uk-card-default uk-card-body uk-width-1-3 uk-margin-left">
            <ul class="uk-list uk-list-divider">
                {{#each sushi}}
                    {{#if mindfully_eaten}}
                        {{> sushi-block mindfully_eaten=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
</div>
